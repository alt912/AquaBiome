    {# Section Alertes et Date de mise √† jour #}
    <section class="alerts-section">
        
        {# -- T√ÇCHES √Ä FAIRE (Rappels) -- #}
        {% if taches is defined and taches is not empty %}
            <div class="mb-4">
                {% for tache in taches %}
                    <div class="alert alert-info alert-dismissible fade show" role="alert" style="border-left: 5px solid #0984e3;">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>üìù √Ä faire :</strong> {{ tache.titre }}
                                <br>
                                <small>Pour le : {{ tache.deadline|date('d/m/Y') }}</small>
