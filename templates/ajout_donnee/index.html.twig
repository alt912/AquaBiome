{% extends 'base.html.twig' %}

{% block title %}Saisie des paramètres - AquaBiome{% endblock %}
{% block page_name %}Saisie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/ajout.css') }}">
{% endblock %}

{% block body %}
<div class="content-area">
    <div class="glass-card">
        <div class="hero-text">
            <h1>Suivi des paramètres</h1>
            <p>Mesures de votre aquarium</p>
        </div>

        <form action="#" method="POST">
            
            <div class="section-title">Informations Générales</div>
            <div class="form-group">
                <div class="label-row">Date de la saisie</div>
                <input type="date" class="form-input" value="{{ "now"|date("Y-m-d") }}">
            </div>

            <div class="section-title">Chimie de l'eau</div>
            
            <div class="form-group">
                <div class="label-row">Température <span class="unit">°C</span></div>
                <input type="number" step="0.1" class="form-input" placeholder="Ex: 25.5">
            </div>

            <div class="form-group">
                <div class="label-row">PH <span class="unit">0-14</span></div>
                <input type="number" step="0.1" class="form-input" placeholder="Ex: 8.2">
            </div>

            <div class="form-group">
                <div class="label-row">Chlore (Cl) <span class="unit">mg/l</span></div>
                <input type="number" step="0.1" class="form-input" placeholder="0">
            </div>

            <div class="form-group">
                <div class="label-row">Nitrite (NO2) <span class="unit">mg/l</span></div>
                <input type="number" step="0.01" class="form-input" placeholder="0">
            </div>

            <div class="form-group">
                <div class="label-row">GH / KH <span class="unit">°d</span></div>
                <div style="display: flex; gap: 10px;">
                    <input type="number" class="form-input" placeholder="GH">
                    <input type="number" class="form-input" placeholder="KH">
                </div>
            </div>

            <button type="submit" class="btn-submit">Enregistrer les données</button>
            <a href="#" style="display: block; text-align: center; margin-top: 15px; color: #666; text-decoration: none; font-size: 0.9rem;">Annuler</a>
        </form>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Empêche la saisie de texte dans les champs numériques
        document.querySelectorAll('input[type="number"]').forEach(input => {
            input.addEventListener('keypress', (e) => {
                if (!/[0-9.,]/.test(e.key)) e.preventDefault();
            });
        });
    </script>
{% endblock %}