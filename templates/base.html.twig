<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}AquaBiome{% endblock %}</title>
    
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('styles/base.css') }}">
    {% endblock %}

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>
<body>

    <div class="smartphone-container">
        
        {% block header %}
        <header class="main-header">
            <div class="header-container">
                {# Logo gauche #}
                <a href="{{ path('homePage') }}" class="logo-link">
                    <img src="{{ asset('image/logo_aquabiome.png') }}" class="header-logo" alt="Logo">
                </a>

                {# Badge central dynamique #}
                <div class="active-tab-pill">
                    <span class="pill-emoji">{% block page_icon %}üè†{% endblock %}</span>
                    <span class="pill-text">{% block page_name %}Accueil{% endblock %}</span>
                </div>

                {# Profil et Ic√¥ne To-do List √† droite #}
                <div class="right-actions">
                    <a href="{{ path('ajoutDonnee') }}" class="nav-icon" title="Ajouter une donn√©e" style="font-size: 1.5rem; text-decoration: none;">
                        ‚ûï
                    </a>

                    <a href="{{ path('gestion_compte') }}" class="user-profile">
                        {% if app.user and app.user.avatar %}
                            <img src="{{ asset('uploads/avatars/' ~ app.user.avatar) }}" alt="Profil" style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%;">
                        {% else %}
                            üë§
                        {% endif %}
                    </a>
                    
                    <a href="{{ path('toDoList') }}" class="nav-icon" title="To-do List">
                        <img src="{{ asset('image/IcontoDoList.png') }}" alt="Menu">
                    </a>
                </div>
            </div>
        </header>
        {% endblock %}

        <main>
            {% block body %}{% endblock %}
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>